<h3 class="m-0 mb-4">Products</h3>
{{#if products.length}}
<div class="row row-cols-1 row-cols-md-3 g-4" id="products">
    {{#each products}}
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="{{this.thumbnail}}" class="card-img-top product-img" alt="{{this.title}}" />
            <div class="card-body">
                <h5 class="card-title">{{this.title}} - ${{this.price}} (Stock {{this.stock}})</h5>
                <p class="card-text">{{this.description}}</p>
                {{#if ../isLogged}}
                <a href="/editar.html?id={{this.id}}" class="btn btn-primary">Edit</a>
                <button data-id="{{this.id}}" class="btn btn-danger delete-button">Eliminate</a>
                {{/if}}
                <button data-id="{{this.id}}" class="btn btn-success add-button">Add to cart</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h2>There is not any product.</h2>
{{/if}}